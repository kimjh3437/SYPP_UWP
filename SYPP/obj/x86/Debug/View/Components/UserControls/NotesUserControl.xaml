<UserControl
    x:Class="SYPP.View.Components.UserControls.NotesUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SYPP.View.Components.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid
        Background="#1E2127">
        <!--Grid.Row = 2 : Notes-->

        <Grid x:ConnectionId='2'
            AllowDrop="True"
                                  
                                          
            x:Name="Notes_Grid"
            Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="25"/>
                <RowDefinition MinHeight="150" Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Grid.Row = 0 : Notes TextBlock-->
            <TextBlock
                    Margin="0,15,0,0"
                    Grid.Row="0"
                    HorizontalAlignment="Left"
                    FontFamily="/Assets/Fonts/Assistant-Regular.ttf#Assistant"
                    FontSize="14"
                    Foreground="#C2DBFF"
                    Text="Notes"/>

            <!--Grid.Row = 1 : Icons-->
            <StackPanel
                    Spacing="7"
                    Orientation="Horizontal"
                    Grid.Row="1">

                <!--Start Bullet Button-->
                <Button x:ConnectionId='10'
                        BorderThickness="0"
                        Background="Transparent"
                                                      
                        x:Name="Note_Bullet_Icon"
                        Padding="0">
                    <Image
                            Width="12"
                            Height="10"
                            Source="/Assets/Components/Notes/Note_Bullet_Icon.svg"/>
                </Button>

                <!--Start Number Bullet Button-->
                <Button x:ConnectionId='11'
                        BorderThickness="0"
                        Background="Transparent"
                                                            
                        x:Name="Note_NumberBullet_Icon"
                        Padding="0">
                    <Image
                            Width="12"
                            Height="10"
                            Source="/Assets/Components/Notes/Note_Number_Icon.svg"/>
                </Button>

                <!--Attach Code Button-->
                <Button x:ConnectionId='12'
                        BorderThickness="0"
                        Background="Transparent"
                                                    
                        x:Name="Note_Code_Icon"
                        Padding="0">
                    <Image
                            Width="15"
                            Height="10"
                            Source="/Assets/Components/Notes/Note_Attachment_Icon.svg"/>
                </Button>

                <!--Attach Image Button-->
                <Button x:ConnectionId='13'
                        BorderThickness="0"
                        Background="Transparent"
                                                     
                        x:Name="Note_Image_Icon"
                        Padding="0">
                    <Image
                            Width="12"
                            Height="10"
                            Source="/Assets/Components/Notes/Note_Image_Icon.svg"/>
                </Button>

                <!--Attach Image Button-->
                <Button x:ConnectionId='14'
                        BorderThickness="0"
                        Background="Transparent"
                                                          
                        x:Name="Note_Attachment_Icon"
                        Padding="0">
                    <Image
                            Width="12"
                            Height="12"
                            Source="/Assets/Components/Notes/Note_AttachFile_Icon.svg"/>
                </Button>

            </StackPanel>

            <!--Grid.Row = 2 : Note Contents-->
            <GridView
                    VerticalAlignment="Top"
                    SelectionMode="None"
                    ItemsSource="{Binding Contents}"
                    Grid.Row="2">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Grid
                                Margin="{Binding Margin}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!--Grid.Row = 0, Column = 0 : Bullet-->
                            <TextBlock
                                    Visibility="{Binding Bullet_Visibility}"
                                    Margin="0,0,3,0"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                    FontSize="14"
                                    Foreground="#FAFFFFFF"
                                    Text="•"/>

                            <!--Grid.Row = 0, Column = 0 : Header-->
                            <TextBox x:ConnectionId='9'
                                                                          
                                                                                  
                                    x:Name="Note_Content_TextBox"
                                    IsSpellCheckEnabled="False"
                                    AcceptsReturn="True"
                                    BorderThickness="0"
                                    Padding="0"
                                    TextWrapping="Wrap"
                                    Width="380"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    FontFamily="/Assets/Fonts/Assistant-Regular.ttf#Assistant"
                                    FontSize="14"
                                    Foreground="#FAFFFFFF"
                                    Text="{Binding Content}"/>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="0,-5,0,0"/>
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Orientation="Vertical">
                        </StackPanel>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>

            <!--Grid.Row = 3 : File Managements-->
            <GridView x:ConnectionId='3'
                    Margin="-10,0,0,-20"
                    x:Name="Files_Attachments_GridView"
                    Visibility="Collapsed"
                    SelectionMode="None"
                    MaxWidth="800"
                    HorizontalAlignment="Left"
                    Grid.Column="0"
                    Grid.Row="3"
                    ItemsSource="{Binding Files}">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Button x:ConnectionId='5'
                                    x:Name="InputBox_Attached_File_Button"
                                                                                                 
                                    CornerRadius="5"
                                    Background="#363636"
                                    BorderThickness="0"
                                    Padding="0"
                                    Height="20">
                                <StackPanel>
                                    <TextBlock
                                            Margin="10,2,10,2"
                                            HorizontalAlignment="Center"
                                            FontFamily="/Assets/Fonts/Open_Sans/OpenSans-SemiBold.ttf#Open Sans"
                                            FontSize="12"
                                            Foreground="#B3FFFFFF"
                                            Text="{Binding Title}"/>
                                </StackPanel>
                                <Button.Resources>
                                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#FAFFFFFF"/>
                                    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#FAFFFFFF"/>
                                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#2B2B2B"/>
                                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#2B2B2B"/>
                                </Button.Resources>
                            </Button>

                            <Popup x:ConnectionId='6'    
                                    VerticalOffset ="-100"
                                    IsLightDismissEnabled="True"
                                                                                   
                                                                                                 
                                    x:Name="InputBox_Attached_Image_Preview"
                                    IsOpen="{Binding Preview_IsOpen}">
                                <Frame
                                        Height="100"
                                        Width="100">
                                    <Image
                                            Source="{Binding ImageSource}"
                                            Height="100"
                                            Width="100"
                                            x:Name="Attached_Image"/>
                                </Frame>
                            </Popup>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="10,0,5,0"/>
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                        </StackPanel>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>

        </Grid>

    </Grid>
</UserControl>

