<Page
    x:Class="SYPP.View.Components.Events.EventDetailedPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SYPP.View.Components.Events"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:Calendar ="using:SYPP.Converter.Calendar"
    xmlns:General ="using:SYPP.Converter.General"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <General:StringToColorConverter x:Key="StringToColor"/>
        <Calendar:DateTimeToMonthConverter x:Key="DateTimeToMonth"/>
        <Calendar:DateTimeToYearConverter x:Key="DateTimeToYear"/>
    </Page.Resources>

    <Grid
        MaxHeight="750"
        Background="#1E2127">
        <Grid
            MaxHeight="680"
            Margin="25,25,25,0">
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="37" Height="Auto"/>
                <RowDefinition MinHeight="285" Height="Auto"/>
                <RowDefinition MinHeight="251" Height="*"/>
            </Grid.RowDefinitions>
            
            <!--Grid.Row = 0 : Event Title TextBlock-->
            <Frame
                Background="Transparent"
                Grid.Row="0">
                <TextBox x:ConnectionId='27'
                    x:Name="Title_TextBox"
                                                           
                    PlaceholderForeground="#B3FFFFFF"
                    PlaceholderText="Enter Title"
                    VerticalAlignment="Center"
                    Padding="0,0,0,18"
                    BorderThickness="0"
                    Grid.Row="0"
                    HorizontalAlignment="Left"
                    Foreground="#FFE9D6"
                    FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                    FontSize="16"
                    Text="{Binding Detail.Title}"/>
            </Frame>
            
            
            <!--Grid.Row = 0 : Separator Line-->
            <Frame
                VerticalAlignment="Bottom"
                Grid.Row="0"
                Background="#363F4C"
                Height="1"
                Width="10000"/>
            
            <!--Grid.Row = 1 : Calendar Control-->
            <Grid
                Margin="0,15,0,0"
                Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition MinHeight="195" Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!--Grid.Row = 0 : Date Time TextBlock-->
                <TextBlock
                    HorizontalAlignment="Left"
                    FontFamily="/Assets/Fonts/Assistant-Regular.ttf#Assistant"
                    FontSize="14"
                    Foreground="#C2DBFF"
                    Text="Date and Time"/>
                
                <!--Grid.Row = 1 : Calendar View-->
                <Grid
                    Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>


                    <!--Grid.Row = 1 : Month and Year of Currently Selected Calendar-->
                    <StackPanel
                        Margin="0,0,0,9"
                        Spacing="20"
                        HorizontalAlignment="Center"
                        Grid.Row="1"
                        Orientation="Horizontal">

                        <!--Month-->
                        <StackPanel
                            HorizontalAlignment="Center"
                            Spacing="5"
                            Orientation="Horizontal">

                            <!--Month Prev Button-->
                            <Button x:ConnectionId='25'
                                                               
                                x:Name="Month_Prev_Button"
                                BorderThickness="0"
                                Background="Transparent"
                                Padding="0">
                                <Image
                                    Height="10"
                                    Width="10"
                                    Source="/Assets/Components/Arrows/Arrow_Left_Icon.svg"/>
                            </Button>

                            <!--Main TextBlock-->
                            <TextBlock
                                    Foreground="#FAFFFFFF"
                                    FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                    FontSize="12"
                                    Text="{Binding SelectedTime, Converter={StaticResource DateTimeToMonth}}"/>

                            <!--Month Next Button-->
                            <Button x:ConnectionId='26'
                                                               
                                x:Name="Month_Next_Button"
                                BorderThickness="0"
                                Background="Transparent"
                                Padding="0">
                                <Image
                                    Height="10"
                                    Width="10"
                                    Source="/Assets/Components/Arrows/Arrow_Right_Icon.svg"/>
                            </Button>

                        </StackPanel>

                        <!--Year-->
                        <StackPanel
                                HorizontalAlignment="Center"
                                Spacing="5"
                                Orientation="Horizontal">

                            <!--Year Prev Button-->
                            <Button x:ConnectionId='23'
                                                              
                                x:Name="Year_Prev_Button"
                                BorderThickness="0"
                                Background="Transparent"
                                Padding="0">
                                <Image
                                    Height="10"
                                    Width="10"
                                    Source="/Assets/Components/Arrows/Arrow_Left_Icon.svg"/>
                            </Button>

                            <!--Main Text Block-->
                            <TextBlock
                                Foreground="#FAFFFFFF"
                                FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                FontSize="12"
                                Text="{Binding SelectedTime, Converter={StaticResource DateTimeToYear}}"/>

                            <!--Year Next Button-->
                            <Button x:ConnectionId='24'
                                x:Name="Year_Next_Button"
                                                              
                                BorderThickness="0"
                                Background="Transparent"
                                Padding="0">
                                <Image
                                    Height="10"
                                    Width="10"
                                    Source="/Assets/Components/Arrows/Arrow_Right_Icon.svg"/>
                            </Button>

                        </StackPanel>

                    </StackPanel>

                    <!--Grid.Row = 2 : Days List-->
                    <StackPanel
                        Spacing="14"
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="12"
                            FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                            Foreground="#C2DBFF"
                            Text="Sun"/>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="12"
                            FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                            Foreground="#C2DBFF"
                            Text="M"/>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="12"
                            FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                            Foreground="#C2DBFF"
                            Text="Tu"/>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="12"
                            FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                            Foreground="#C2DBFF"
                            Text="W"/>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="12"
                            FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                            Foreground="#C2DBFF"
                            Text="Th"/>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="12"
                            FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                            Foreground="#C2DBFF"
                            Text="F"/>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="12"
                            FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                            Foreground="#C2DBFF"
                            Text="Sat"/>

                    </StackPanel>

                    <!--Grid.Row = 3 : Calnedar Days GridView-->
                    <GridView
                        SelectionMode="None"
                        HorizontalAlignment="Center"
                        Grid.Row="3"
                        ItemsSource="{Binding EachMonth}">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock x:ConnectionId='22' 
                                    x:Name="Day_TextBlock"
                                                                 
                                    HorizontalAlignment="Center"
                                    Visibility="{Binding Visibility}"
                                    FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                    FontSize="12"
                                    Foreground="{Binding Foreground}"
                                    Text="{Binding Text}"/>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                        <GridView.ItemContainerStyle>
                            <Style TargetType="GridViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="-9,-3,-9,-5"/>
                            </Style>
                        </GridView.ItemContainerStyle>
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid                                     
                                    HorizontalAlignment="Center"
                                    MaximumRowsOrColumns="7"
                                    Orientation="Horizontal">
                                </ItemsWrapGrid>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>

                    <!--Grid.Row = 4 : Calnedar Hour and Minutes-->
                    <StackPanel
                        Spacing="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Grid.Row="4">
                        <Frame
                            CornerRadius="5"
                            Background="#CC313740"
                            Height="21"
                            Width="39">
                            <TextBox x:ConnectionId='21'
                                                                    
                                                                               
                                Text="{Binding HH}"
                                Padding="12,3,12,3"
                                TextAlignment="Center"
                                x:Name="HH_TextBox"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="10"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#FAFFFFFF"
                                PlaceholderText="HH"
                                PlaceholderForeground="#B3FFFFFF"/>
                        </Frame>
                        <Frame
                            CornerRadius="5"
                            Background="#CC313740"
                            Height="21"
                            Width="39">
                            <TextBox x:ConnectionId='20'
                                                                    
                                                                               
                                Text="{Binding MM}"
                                Padding="12,3,12,3"
                                TextAlignment="Center"
                                x:Name="MM_TextBox"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="10"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#FAFFFFFF"
                                PlaceholderText="MM"
                                PlaceholderForeground="#B3FFFFFF"/>
                        </Frame>
                        <Frame
                            CornerRadius="5"
                            Background="#CC313740"
                            Height="21"
                            Width="39">
                            <TextBox x:ConnectionId='19'
                                IsReadOnly="True"
                                Padding="12,3,12,3"
                                x:Name="TT_TextBox"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="10"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#FAFFFFFF"
                                PlaceholderText="AM"
                                PlaceholderForeground="#B3FFFFFF"/>
                        </Frame>


                    </StackPanel>
                </Grid>

                <!--Grid.Row = 2 : Location-->
                <StackPanel
                    Grid.Row="2"
                    Orientation="Vertical">
                    <TextBlock
                        HorizontalAlignment="Left"
                        FontFamily="/Assets/Fonts/Assistant-Regular.ttf#Assistant"
                        FontSize="14"
                        Foreground="#C2DBFF"
                        Text="Location"/>
                    <TextBox x:ConnectionId='18'
                        x:Name="Location_TextBox"
                                                                  
                        PlaceholderForeground="#B3FFFFFF"
                        PlaceholderText="Enter Location"
                        Foreground="#FAFFFFFF"
                        Padding="0"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        FontFamily="/Assets/Fonts/Assistant-Regular.ttf#Assistant"
                        FontSize="14"
                        Text="{Binding Detail.Location}"/>
                    
                </StackPanel>
            </Grid>

            <!--Grid.Row = 1 : Separator Line-->
            <Frame
                VerticalAlignment="Bottom"
                Grid.Row="1"
                Background="#363F4C"
                Height="1"
                Width="10000"/>
            
            <!--Grid.Row = 2 : Notes-->
            <Grid x:ConnectionId='2'
                AllowDrop="True"
                                      
                                              
                x:Name="Notes_Grid"
                Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition MinHeight="150" Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>
                
                <!--Grid.Row = 0 : Notes TextBlock-->
                <TextBlock
                    Margin="0,15,0,0"
                    Grid.Row="0"
                    HorizontalAlignment="Left"
                    FontFamily="/Assets/Fonts/Assistant-Regular.ttf#Assistant"
                    FontSize="14"
                    Foreground="#C2DBFF"
                    Text="Notes"/>
                
                <!--Grid.Row = 1 : Icons-->
                <StackPanel
                    Spacing="7"
                    Orientation="Horizontal"
                    Grid.Row="1">
                    
                    <!--Start Bullet Button--> 
                    <Button x:ConnectionId='13'
                        BorderThickness="0"
                        Background="Transparent"
                                                      
                        x:Name="Note_Bullet_Icon"
                        Padding="0">
                        <Image
                            Width="12"
                            Height="10"
                            Source="/Assets/Components/Notes/Note_Bullet_Icon.svg"/>
                    </Button>

                    <!--Start Number Bullet Button-->
                    <Button x:ConnectionId='14'
                        BorderThickness="0"
                        Background="Transparent"
                                                            
                        x:Name="Note_NumberBullet_Icon"
                        Padding="0">
                        <Image
                            Width="12"
                            Height="10"
                            Source="/Assets/Components/Notes/Note_Number_Icon.svg"/>
                    </Button>

                    <!--Attach Code Button-->
                    <Button x:ConnectionId='15'
                        BorderThickness="0"
                        Background="Transparent"
                                                    
                        x:Name="Note_Code_Icon"
                        Padding="0">
                        <Image
                            Width="15"
                            Height="10"
                            Source="/Assets/Components/Notes/Note_Attachment_Icon.svg"/>
                    </Button>

                    <!--Attach Image Button-->
                    <Button x:ConnectionId='16'
                        BorderThickness="0"
                        Background="Transparent"
                                                     
                        x:Name="Note_Image_Icon"
                        Padding="0">
                        <Image
                            Width="12"
                            Height="10"
                            Source="/Assets/Components/Notes/Note_Image_Icon.svg"/>
                    </Button>

                    <!--Attach Image Button-->
                    <Button x:ConnectionId='17'
                        BorderThickness="0"
                        Background="Transparent"
                                                          
                        x:Name="Note_Attachment_Icon"
                        Padding="0">
                        <Image
                            Width="12"
                            Height="12"
                            Source="/Assets/Components/Notes/Note_AttachFile_Icon.svg"/>
                    </Button>

                </StackPanel>
                
                <!--Grid.Row = 2 : Note Contents-->
                <GridView
                    VerticalAlignment="Top"
                    SelectionMode="None"
                    ItemsSource="{Binding Contents}"
                    Grid.Row="2">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                Margin="{Binding Margin}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!--Grid.Row = 0, Column = 0 : Bullet-->
                                <TextBlock
                                    Visibility="{Binding Bullet_Visibility}"
                                    Margin="0,0,3,0"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                    FontSize="14"
                                    Foreground="#FAFFFFFF"
                                    Text="•"/>

                                <!--Grid.Row = 0, Column = 0 : Header-->
                                <TextBox x:ConnectionId='12'
                                                                          
                                                                                  
                                    x:Name="Note_Content_TextBox"
                                    IsSpellCheckEnabled="False"
                                    AcceptsReturn="True"
                                    BorderThickness="0"
                                    Padding="0"
                                    TextWrapping="Wrap"
                                    Width="380"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    FontFamily="/Assets/Fonts/Assistant-Regular.ttf#Assistant"
                                    FontSize="14"
                                    Foreground="#FAFFFFFF"
                                    Text="{Binding Content}"/>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Margin" Value="0,-5,0,0"/>
                        </Style>
                    </GridView.ItemContainerStyle>
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Orientation="Vertical">
                            </StackPanel>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>
                
                <!--Grid.Row = 3 : File Managements-->
                <GridView x:ConnectionId='3'
                    Margin="-10,0,0,-20"
                    x:Name="Files_Attachments_GridView"
                    Visibility="Collapsed"
                    SelectionMode="None"
                    MaxWidth="800"
                    HorizontalAlignment="Left"
                    Grid.Column="0"
                    Grid.Row="3"
                    ItemsSource="{Binding Files}">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Button x:ConnectionId='8'
                                    x:Name="InputBox_Attached_File_Button"
                                                                                                 
                                    CornerRadius="5"
                                    Background="#363636"
                                    BorderThickness="0"
                                    Padding="0"
                                    Height="20">
                                    <StackPanel>
                                        <TextBlock
                                            Margin="10,2,10,2"
                                            HorizontalAlignment="Center"
                                            FontFamily="/Assets/Fonts/Open_Sans/OpenSans-SemiBold.ttf#Open Sans"
                                            FontSize="12"
                                            Foreground="#B3FFFFFF"
                                            Text="{Binding Title}"/>
                                    </StackPanel>
                                    <Button.Resources>
                                        <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#FAFFFFFF"/>
                                        <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#FAFFFFFF"/>
                                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#2B2B2B"/>
                                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#2B2B2B"/>
                                    </Button.Resources>
                                </Button>
                                
                                <Popup x:ConnectionId='9'    
                                    VerticalOffset ="-100"
                                    IsLightDismissEnabled="True"
                                                                                   
                                                                                                 
                                    x:Name="InputBox_Attached_Image_Preview"
                                    IsOpen="{Binding Preview_IsOpen}">
                                    <Frame
                                        Height="100"
                                        Width="100">
                                        <Image
                                            Source="{Binding ImageSource}"
                                            Height="100"
                                            Width="100"
                                            x:Name="Attached_Image"/>
                                    </Frame>
                                </Popup>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Margin" Value="10,0,5,0"/>
                        </Style>
                    </GridView.ItemContainerStyle>
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                            </StackPanel>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>
                
                <!--Grid.Row = 4 : Delete, Save, Cancel Button-->
                <Grid
                    Margin="0,0,0,10"
                    Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--Grid.Column = 0, Delete Button--> 
                    <Button x:ConnectionId='4'
                        x:Name="Delete_Button"
                                                   
                        HorizontalAlignment="Center"
                        Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                        FontSize="12"
                        Foreground="#DEB4B4"
                        Content="Delete">
                        <Button.Resources>
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#B3DEB4B4"/>
                            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#B3DEB4B4"/>
                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{Binding Theme.Color_Primary_Hover}"/>
                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{Binding Theme.Color_Primary_Pressed}"/>
                        </Button.Resources>
                    </Button>

                    <!--Grid.Column = 1, Save Button-->
                    <Button x:ConnectionId='5'
                                                 
                        x:Name="Save_Button"
                        HorizontalAlignment="Center"
                        Grid.Column="1"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                        FontSize="12"
                        Foreground="#80C2DBFF"
                        Content="Save">
                        <Button.Resources>
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#FAC2DBFF"/>
                            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#FAC2DBFF"/>
                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{Binding Theme.Color_Primary_Hover}"/>
                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{Binding Theme.Color_Primary_Pressed}"/>
                        </Button.Resources>
                    </Button>

                    <!--Grid.Column = 2, Cancel Button-->
                    <Button x:ConnectionId='6'
                                                   
                        x:Name="Cancel_Button"
                        HorizontalAlignment="Center"
                        Grid.Column="2"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                        FontSize="12"
                        Foreground="#B3ACACAC"
                        Content="Cancel">
                        <Button.Resources>
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#ACACAC"/>
                            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#ACACAC"/>
                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{Binding Theme.Color_Primary_Hover}"/>
                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{Binding Theme.Color_Primary_Pressed}"/>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Grid>

        </Grid>

    </Grid>
</Page>

