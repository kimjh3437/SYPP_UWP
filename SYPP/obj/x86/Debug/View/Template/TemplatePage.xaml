<Page
    x:Class="SYPP.View.Template.TemplatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SYPP.View.Template"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    xmlns:General="using:SYPP.Converter.General"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <General:StringToColorConverter x:Key="StringToColor"/>
    </Page.Resources>
    <Grid
        Background="#1A1C20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!--Grid.Row = 0 : [RIGHT] Header Hide Weekly Deadlines Button-->
            <Button x:ConnectionId='2'
                BorderThickness="0"
                                                         
                x:Name="Hide_Weekly_Schedule_Button"
                Background="#363C46"
                Padding="0"
                Width="170"
                Height="26"
                CornerRadius="13"
                Grid.Row="0"
                HorizontalAlignment="Right">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                   
                    Spacing="4"
                    Orientation="Horizontal">
                    <Image
                        Width="12"
                        Height="13.33"
                        Source="/Assets/Navigations/Calendar_Navigation_UnSelected_Icon.svg"/>
                    <TextBlock x:ConnectionId='17'
                        x:Name="Hide_Button_TextBlock"
                        Foreground="#C2DBFF"
                        FontSize="12"
                        FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                        Text="Hide Weekly Deadlines"/>
                </StackPanel>
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#C2DBFF"/>
                    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#C2DBFF"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#7D8CA8"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#94A5C5"/>
                </Button.Resources>
            </Button>

            <!--Grid.Row = 1 : Weekly Schedule Calendar-->
            <GridView x:ConnectionId='3'
                SelectionMode="None"
                x:Name="Weekly_Schedule_Calendar_GridView"
                Visibility="Visible"
                ItemsSource="{Binding WeeklyCalendar}"
                Grid.Row="1">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            BorderThickness="2"
                            BorderBrush="{Binding BorderColor}"
                            CornerRadius="15"
                            Height="138"
                            Padding="5"
                            Margin="5,5,5,5"
                            Background="#242931">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock 
                                    Margin="0,2,2,0"
                                    Grid.Row="0"
                                    Foreground="#FAFFFFFF"
                                    FontFamily="/Assets/Fonts/Assistant-Bold.ttf#Assistant"
                                    FontSize="12"
                                    HorizontalAlignment="Right"
                                    Text="{Binding Day_String}"/>
                                <ScrollViewer
                                    VerticalScrollMode="Enabled"
                                    Grid.Row="1">
                                    <ListView
                                        SelectionMode="None"
                                        x:Name="DailyTasksEvents"
                                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                        ScrollViewer.VerticalScrollMode="Enabled"
                                        ItemsSource="{Binding Events}"
                                        Grid.Row="1">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid x:ConnectionId='15'
                                                    x:Name="Each_Calendar_Event"
                                                                                                                                       
                                                    VerticalAlignment="Center"
                                                    Padding="3"
                                                    Margin="0,0,0,0"
                                                    ColumnSpacing="5">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Image x:ConnectionId='16' 
                                                        Height="14"
                                                        Width="14"
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        x:Name="Icon_Favorite"
                                                                                     
                                                        Margin="0,2,0,0"
                                                        Source="{Binding Status_Icon_Source}">
                                                    </Image>
                                                    <StackPanel
                                                        Spacing="0"
                                                        Padding="0"
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        Orientation="Vertical">
                                                        <StackPanel
                                                            Spacing="-2"
                                                            Orientation="Vertical">
                                                            <TextBlock 
                                                                FontFamily="/Assets/Fonts/Assistant-Regular.ttf#Assistant"
                                                                FontSize="12"
                                                                Foreground="#DEFFFFFF"
                                                                VerticalAlignment="Top"
                                                                TextAlignment="Start"
                                                                Text="{Binding Detail.CompanyName}"/>
                                                            <TextBlock 
                                                                FontFamily="/Assets/Fonts/Assistant-Regular.ttf#Assistant"
                                                                FontSize="12"
                                                                Foreground="#DEFFFFFF"
                                                                VerticalAlignment="Top"
                                                                TextAlignment="Start"
                                                                Text="{Binding Task.Title}"/>
                                                        </StackPanel>
                                                        <TextBlock 
                                                            Margin="0,-13,0,0"
                                                            FontFamily="/Assets/Fonts/Assistant-Regular.ttf#Assistant"
                                                            FontSize="10"
                                                            Foreground="#99FFFFFF"
                                                            VerticalAlignment="Top"
                                                            TextAlignment="Start"
                                                            Text="{Binding Task.Type}"/>
                                                    </StackPanel>
                                                    <Frame
                                                        VerticalAlignment="Top"
                                                        Height="13"
                                                        Width="13"
                                                        Grid.Row="1"
                                                        Grid.Column="0">
                                                    </Frame>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </ScrollViewer>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="0,0,0,10"/>
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <controls:UniformGrid
                            Columns="7"
                            Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>

            <!--Grid.Row = 2 : [RIGHT] Display Weekly Deadlines-->
            <Button x:ConnectionId='4'
                Margin="0,-20,0,0"
                Visibility="Collapsed"
                BorderThickness="0"
                                                            
                x:Name="Display_Weekly_Schedule_Button"
                Background="#363C46"
                Padding="0"
                Width="170"
                Height="26"
                CornerRadius="13"
                Grid.Row="2"
                HorizontalAlignment="Right">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="4"
                    Orientation="Horizontal">
                    <Image
                        Width="12"
                        Height="13.33"
                        Source="/Assets/Navigations/Calendar_Navigation_UnSelected_Icon.svg"/>
                    <TextBlock x:ConnectionId='12'
                        x:Name="Display_Hide_Button"
                        Foreground="#C2DBFF"
                        FontSize="12"
                        FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                        Text="Display Weekly Deadlines"/>
                </StackPanel>
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#C2DBFF"/>
                    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#C2DBFF"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#7D8CA8"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#94A5C5"/>
                </Button.Resources>
            </Button>
            
            <!--Grid.Row = 3 : Templates Contents-->
            <Grid
                Grid.Row="3"
                ColumnSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="550"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Grid.Column = 0 : List of Templates-->
                <Frame
                    Background="#242931"
                    CornerRadius="20"
                    Grid.Column="0">
                    <Grid
                        Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--PopUp : Add New Application Button-->
                        <Popup x:ConnectionId='6'
                            x:Name="NewTemplate_Button_PopUp"
                            VerticalOffset="-40"
                            Grid.RowSpan="4"
                            VerticalAlignment="Bottom"
                            IsOpen="False">
                            <Button x:ConnectionId='11'
                                                                 
                                x:Name="New_Template_Button"
                                BorderThickness="0"
                                CornerRadius="22"
                                Height="44"
                                Padding="0"
                                Background="#C2DBFF">
                                <StackPanel
                                    Margin="15,0,15,0"
                                    Spacing="5"
                                    Orientation="Horizontal">
                                    <Image
                                        Height="14"
                                        Width="14"
                                    Source="/Assets/Components/General/Dark_Plus_Icon.svg"/>
                                    <TextBlock
                                        FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                        Foreground="#212832"
                                        FontSize="12"
                                        Text="New Template"/>
                                </StackPanel>
                                <Button.Resources>
                                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#C2DBFF"/>
                                    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#C2DBFF"/>
                                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#7D8CA8"/>
                                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#94A5C5"/>
                                </Button.Resources>
                            </Button>
                        </Popup>

                        <!--Grid.Row = 0 : Search Bar-->
                        <Frame
                            Margin="0,0,0,0"
                            Background="Transparent"
                            BorderThickness="2"
                            BorderBrush="#363C46"
                            CornerRadius="13"
                            Width="510"
                            Height="24"
                            HorizontalAlignment="Left"
                            Grid.Row="0">
                            <StackPanel
                                Spacing="6"
                                Margin="12,0,12,0"
                                Orientation="Horizontal">
                                <Image
                                    Height="11"
                                    Width="11"
                                    Source="/Assets/Components/General/Search_Icon.svg"/>
                                <TextBox x:ConnectionId='10'
                                    x:Name="Search_TextBox"
                                                                            
                                    FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                    PlaceholderForeground="#6D7888"
                                    Foreground="#FAFFFFFF"
                                    VerticalContentAlignment="Center"
                                    FontSize="12"
                                    PlaceholderText="Search"
                                    Padding="0,2,0,0"
                                    BorderThickness="0"
                                    Background="Transparent"/>

                            </StackPanel>
                        </Frame>
                        
                        <!--Grid.Row = 1 : Filter Option-->
                        <Button x:ConnectionId='7'   
                            x:Name="Filter_Option_Button"
                                                              
                            Padding="0"
                            Margin="10,10,0,10"
                            BorderThickness="0"
                            Background="Transparent"
                            Grid.Row="1">
                            <StackPanel
                                Spacing="3"
                                Orientation="Horizontal">
                                <TextBlock
                                    FontSize="11"
                                    FontFamily="/Assets/Fonts/Open_Sans/OpenSans-SemiBold.ttf#Open Sans"
                                    Foreground="#99FFFFFF"
                                    Text="{Binding Filter_Selected}"/>
                                <Image
                                    Height="10"
                                    Width="10"
                                    Source="/Assets/Components/Arrows/Downward_Arrow_Gray_Icon.svg"/>
                            </StackPanel>
                        </Button>

                        <!--Grid.Row = 2 : Templates List--> 
                        <GridView
                            ItemsSource="{Binding Templates}"
                            SelectionMode="None"
                            Grid.Row="2">
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <Button x:ConnectionId='8'
                                        Width="314"
                                        Height="32"
                                        CornerRadius="5"
                                        BorderThickness="1.5"
                                        BorderBrush="{Binding BorderBrush, Converter={StaticResource StringToColor}}"
                                        Background="{Binding Background, Converter={StaticResource StringToColor}}"
                                                                     
                                        x:Name="Template_Button">
                                        <Grid
                                            Margin="-10,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="280"/>
                                            </Grid.ColumnDefinitions>
                                            <Image x:ConnectionId='9'
                                                Height="12"
                                                Width="12"
                                                                                     
                                                x:Name="IsFavorite_Star_Image"
                                                Grid.Column="0"
                                                Source="{Binding IsFavorite_IconSource}"/>

                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Grid.Column="1"
                                                FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                                FontSize="12"
                                                Foreground="#F5F5F5"
                                                Text="{Binding Detail.Title}"/>
                                        </Grid>
                                        <Button.Resources>
                                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#C2DBFF"/>
                                            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#C2DBFF"/>
                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#339CC1F9"/>
                                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#94A5C5"/>
                                        </Button.Resources>
                                    </Button>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                            <GridView.ItemContainerStyle>
                                <Style TargetType="GridViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,-5,10,-5"/>
                                </Style>
                            </GridView.ItemContainerStyle>
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel
                                        HorizontalAlignment="Left"
                                        Orientation="Vertical">
                                    </StackPanel>
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                    </Grid>

                </Frame>

                <!--Grid.Column = 1 : Template Detaild Contents-->
                <Frame x:ConnectionId='5'
                    HorizontalAlignment="Stretch"
                    Background="#242931"
                    CornerRadius="15,15,15,15"
                    Grid.Column="1"
                    x:Name="Template_Contents_Frame">
                </Frame>

            </Grid>
        </Grid>
        
        

    </Grid>
</Page>

