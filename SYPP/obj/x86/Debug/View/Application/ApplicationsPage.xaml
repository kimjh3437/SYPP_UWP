<Page
    x:Class="SYPP.View.Application.ApplicationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:General="using:SYPP.Converter.General"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <General:StringToColorConverter x:Key="StringToColor"/>
    </Page.Resources>
    <Grid
        Background="#1A1C20">
        
        <!--PopUp : New Applications-->
        <Popup x:ConnectionId='2'
            x:FieldModifier="public"
            IsLightDismissEnabled="True"
                                                 
            VerticalOffset="-250"
            VerticalAlignment="Center"
            HorizontalOffset="-130"
            HorizontalAlignment="Center"
            IsOpen="False"
            x:Name="New_Application_Popup">
            <Frame x:ConnectionId='32'
                VerticalAlignment="Center"
                CornerRadius="15"
                x:Name="New_Application_Frame"
                Background="#1E2127"              >
                
            </Frame>
        </Popup>

        <!--PopUp : New Task on Application-->
        <Popup x:ConnectionId='3'
            x:FieldModifier="public"
            IsLightDismissEnabled="True"
                                                 
            VerticalOffset="-250"
            VerticalAlignment="Center"
            HorizontalOffset="-130"
            HorizontalAlignment="Center"
            IsOpen="False"
            x:Name="New_Task_Popup">
            <Frame x:ConnectionId='31'
                VerticalAlignment="Center"
                CornerRadius="15"
                x:Name="New_Task_Frame"
                Background="#1E2127"              >
            </Frame>
        </Popup>

        <!--Main Grid-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Grid.Row = 0 : [RIGHT] Header Hide Weekly Deadlines Button-->
            <Button x:ConnectionId='4'
                BorderThickness="0"
                                                         
                x:Name="Hide_Weekly_Schedule_Button"
                Background="#363C46"
                Padding="0"
                Width="170"
                Height="26"
                CornerRadius="13"
                Grid.Row="0"
                HorizontalAlignment="Right">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                   
                    Spacing="4"
                    Orientation="Horizontal">
                    <Image
                        Width="12"
                        Height="13.33"
                        Source="/Assets/Navigations/Calendar_Navigation_UnSelected_Icon.svg"/>
                    <TextBlock x:ConnectionId='30'
                        x:Name="Hide_Button_TextBlock"
                        Foreground="#C2DBFF"
                        FontSize="12"
                        FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                        Text="Hide Weekly Deadlines"/>
                </StackPanel>
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#C2DBFF"/>
                    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#C2DBFF"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#7D8CA8"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#94A5C5"/>
                </Button.Resources>
            </Button>

            <!--Grid.Row = 1 : Weekly Schedule Calendar-->
            <GridView x:ConnectionId='5'
                SelectionMode="None"
                x:Name="Weekly_Schedule_Calendar_GridView"
                Visibility="Visible"
                ItemsSource="{Binding WeeklyCalendar}"
                Grid.Row="1">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            BorderThickness="2"
                            BorderBrush="{Binding BorderColor}"
                            CornerRadius="15"
                            Height="138"
                            Padding="5"
                            Margin="5,5,5,5"
                            Background="#242931">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock 
                                    Margin="0,2,2,0"
                                    Grid.Row="0"
                                    Foreground="#FAFFFFFF"
                                    FontFamily="/Assets/Fonts/Assistant-Bold.ttf#Assistant"
                                    FontSize="12"
                                    HorizontalAlignment="Right"
                                    Text="{Binding Day_String}"/>
                                <ScrollViewer
                                    VerticalScrollMode="Enabled"
                                    Grid.Row="1">
                                    <ListView
                                        SelectionMode="None"
                                        x:Name="DailyTasksEvents"
                                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                        ScrollViewer.VerticalScrollMode="Enabled"
                                        ItemsSource="{Binding Events}"
                                        Grid.Row="1">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid x:ConnectionId='28'
                                                    x:Name="Each_Calendar_Event"
                                                                                                                                       
                                                    VerticalAlignment="Center"
                                                    Padding="3"
                                                    Margin="0,0,0,0"
                                                    ColumnSpacing="5">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Image x:ConnectionId='29' 
                                                        Height="14"
                                                        Width="14"
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        x:Name="Icon_Favorite"
                                                                                     
                                                        Margin="0,2,0,0"
                                                        Source="{Binding Status_Icon_Source}">
                                                    </Image>
                                                    <StackPanel
                                                        Spacing="0"
                                                        Padding="0"
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        Orientation="Vertical">
                                                        <StackPanel
                                                            Spacing="-2"
                                                            Orientation="Vertical">
                                                            <TextBlock 
                                                                FontFamily="/Assets/Fonts/Assistant-Regular.ttf#Assistant"
                                                                FontSize="12"
                                                                Foreground="#DEFFFFFF"
                                                                VerticalAlignment="Top"
                                                                TextAlignment="Start"
                                                                Text="{Binding Detail.CompanyName}"/>
                                                            <TextBlock 
                                                                FontFamily="/Assets/Fonts/Assistant-Regular.ttf#Assistant"
                                                                FontSize="12"
                                                                Foreground="#DEFFFFFF"
                                                                VerticalAlignment="Top"
                                                                TextAlignment="Start"
                                                                Text="{Binding Task.Title}"/>
                                                        </StackPanel>
                                                        <TextBlock 
                                                            Margin="0,-13,0,0"
                                                            FontFamily="/Assets/Fonts/Assistant-Regular.ttf#Assistant"
                                                            FontSize="10"
                                                            Foreground="#99FFFFFF"
                                                            VerticalAlignment="Top"
                                                            TextAlignment="Start"
                                                            Text="{Binding Task.Type}"/>
                                                    </StackPanel>
                                                    <Frame
                                                        VerticalAlignment="Top"
                                                        Height="13"
                                                        Width="13"
                                                        Grid.Row="1"
                                                        Grid.Column="0">
                                                    </Frame>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </ScrollViewer>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="0,0,0,10"/>
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <controls:UniformGrid
                            Columns="7"
                            Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>
            
            <!--Grid.Row = 2 : [LEFT] Active Application & Archive Application Options-->
            <StackPanel
                Grid.Row="2"
                Orientation="Horizontal">
                <Button x:ConnectionId='24'
                    CornerRadius="10,10,0,0"
                    BorderThickness="0"
                    Padding="0"
                                                            
                    x:Name="Active_Applications_Button"
                    Height="26"
                    Width="120"
                    Background="#212832"
                    FontSize="12"
                    Foreground="#C2DBFF"
                    FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                    Content="Active Applications">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#C2DBFF"/>
                        <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#C2DBFF"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#7D8CA8"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#94A5C5"/>
                    </Button.Resources>
                </Button>
                <Button x:ConnectionId='25'
                    CornerRadius="10,10,0,0"
                    Background="#99212832"
                    BorderThickness="0"
                    Padding="0"
                                                              
                    x:Name="Archived_Applications_Button"
                    Height="26"
                    Width="134"
                    FontSize="12"
                    Foreground="#F5F5F5"
                    FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                    Content="Archived Applications">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#C2DBFF"/>
                        <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#C2DBFF"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#7D8CA8"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#94A5C5"/>
                    </Button.Resources>
                </Button>
                
            </StackPanel>
            
            <!--Grid.Row = 2 : [RIGHT] Display Weekly Deadlines-->
            <Button x:ConnectionId='6'
                Margin="0,-20,0,0"
                Visibility="Collapsed"
                BorderThickness="0"
                                                            
                x:Name="Display_Weekly_Schedule_Button"
                Background="#363C46"
                Padding="0"
                Width="170"
                Height="26"
                CornerRadius="13"
                Grid.Row="2"
                HorizontalAlignment="Right">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="4"
                    Orientation="Horizontal">
                    <Image
                        Width="12"
                        Height="13.33"
                        Source="/Assets/Navigations/Calendar_Navigation_UnSelected_Icon.svg"/>
                    <TextBlock x:ConnectionId='23'
                        x:Name="Display_Hide_Button"
                        Foreground="#C2DBFF"
                        FontSize="12"
                        FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                        Text="Display Weekly Deadlines"/>
                </StackPanel>
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#C2DBFF"/>
                    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#C2DBFF"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#7D8CA8"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#94A5C5"/>
                </Button.Resources>
            </Button>
            
            <!--Grid.Row = 3 : Active Applications List Grids-->
            <Grid
                ColumnSpacing="20"
                VerticalAlignment="Stretch"
                Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!--Grid.Column = 0 : Applications List-->
                <Frame
                    Visibility="Visible"
                    CornerRadius="0,15,15,15"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Width="545"
                    Background="#242931">
                    <Grid
                        Margin="20,10,20,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--PopUp : Add New Application Button-->
                        <Popup x:ConnectionId='8'
                            x:Name="NewApplication_Button_PopUp"
                            VerticalOffset="-60"
                            Grid.RowSpan="4"
                            VerticalAlignment="Bottom"
                            IsOpen="False">
                            <Button x:ConnectionId='22'
                                                                    
                                x:Name="New_Application_Button"
                                BorderThickness="0"
                                CornerRadius="22"
                                Height="44"
                                Width="101"
                                Padding="0"
                                Background="#C2DBFF">
                                <StackPanel
                                    Spacing="5"
                                    Orientation="Horizontal">
                                    <Image
                                        Height="14"
                                        Width="14"
                                        Source="/Assets/Components/General/Dark_Plus_Icon.svg"/>
                                    <TextBlock
                                        FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                        Foreground="#212832"
                                        FontSize="12"
                                        Text="New App"/>
                                </StackPanel>
                                <Button.Resources>
                                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#C2DBFF"/>
                                    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#C2DBFF"/>
                                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#7D8CA8"/>
                                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#94A5C5"/>
                                </Button.Resources>
                            </Button>
                        </Popup>

                        <!--Grid.Row = 0 : Application Category Filter & Search Bar-->
                        <Grid
                            Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!--Grid.Column = 0 : Cateogry Filters-->
                            <GridView
                                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                Margin="-5,0,0,0"
                                SelectionMode="None"
                                ItemsSource="{Binding Category_Filters}"
                                Grid.Column="0">
                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid    
                                            x:Name="Category_Type_Grid">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Button x:ConnectionId='19'
                                                                                  
                                                Visibility="Visible"
                                                Grid.Row="0"
                                                x:Name="Category_Type_Button"
                                                BorderThickness="0"
                                                MinWidth="36"
                                                CornerRadius="13"
                                                Background="{Binding UI_Handler.Background, Converter={StaticResource StringToColor}}"
                                                Foreground="{Binding UI_Handler.Foreground}"
                                                FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                                Content="{Binding Type}"
                                                Padding="10,0,10,0"
                                                Height="26">
                                                <Button.Resources>
                                                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="{Binding UI_Handler.Foreground}"/>
                                                    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="{Binding UI_Handler.Foreground}"/>
                                                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{Binding UI_Handler.Background_Hover}"/>
                                                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{Binding UI_Handler.Background_Pressed}"/>
                                                </Button.Resources>
                                            </Button>

                                            <!--Filter Pop Up : This should work but for reason does not work-->
                                            <Popup x:ConnectionId='20'    
                                                                                               
                                                IsLightDismissEnabled="True"
                                                IsOpen="{Binding Category_PopUp_IsOpen}"
                                                Grid.Row="0"
                                                x:Name="Category_Filter_Type_List_PopUp">
                                                <GridView
                                                    SelectionMode="None"
                                                    ItemsSource="{Binding Suggestions_Observable}">
                                                    <GridView.ItemTemplate>
                                                        <DataTemplate>
                                                            <Button x:ConnectionId='21' 
                                                                                                      
                                                                x:Name="Category_Specific_Button"
                                                                Foreground="#FAFFFFFF"
                                                                FontSize="10"
                                                                Content="{Binding Content}"/>
                                                        </DataTemplate>
                                                    </GridView.ItemTemplate>
                                                    <GridView.ItemContainerStyle>
                                                        <Style TargetType="GridViewItem">
                                                            <Setter Property="Margin" Value="0,0,0,0"/>
                                                        </Style>
                                                    </GridView.ItemContainerStyle>
                                                    <GridView.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel       
                                                                
                                                                Orientation="Vertical">
                                                            </StackPanel>
                                                        </ItemsPanelTemplate>
                                                    </GridView.ItemsPanel>
                                                </GridView>
                                            </Popup>
                                        </Grid>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                                <GridView.ItemContainerStyle>
                                    <Style TargetType="GridViewItem">
                                        <Setter Property="Margin" Value="0,0,10,0"/>
                                    </Style>
                                </GridView.ItemContainerStyle>
                                <GridView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel       
                                            HorizontalAlignment="Stretch"
                                            Orientation="Horizontal">
                                        </StackPanel>
                                    </ItemsPanelTemplate>
                                </GridView.ItemsPanel>
                            </GridView>
                        </Grid>
                        
                        <!--Grid.Row = 1 : Filter Current Status-->
                        <TextBlock
                            Margin="0,0,0,5"
                            HorizontalAlignment="Left"
                            Foreground="#F5F5F5"
                            FontSize="14"
                            FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                            Grid.Row="1"
                            Text="{Binding Filter_Selected}"/>

                        <!--Grid.Row = 2 : [LEFT] Applications Sorting Options-->
                        <Button   
                            Margin="0,0,0,10"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Left"
                            Padding="0"
                            Grid.Row="2">
                            <StackPanel
                                Spacing="4"
                                Orientation="Horizontal">
                                <TextBlock                                
                                    Foreground="#99DDDDDD"
                                    FontSize="11"
                                    FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                    Grid.Row="1"
                                    Text="Most Recently Updated"/>
                            </StackPanel>
                        </Button>
                        
                        <!--Grid.Row = 2 : [RIGHT] Apply, Tasks, Result Header-->
                        <Grid
                            Margin="0,0,10,10"
                            Width="305"
                            Grid.Row="2"
                            HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                HorizontalAlignment="Left"
                                Grid.Column="0"
                                FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                Foreground="#F5F5F5"
                                FontSize="10"
                                Text="Apply"/>
                            <TextBlock
                                HorizontalAlignment="Center"
                                Grid.Column="1"
                                FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                Foreground="#F5F5F5"
                                FontSize="10"
                                Text="Tasks"/>
                            <TextBlock
                                HorizontalAlignment="Right"
                                Grid.Column="2"
                                FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                Foreground="#F5F5F5"
                                FontSize="10"
                                Text="Result"/>
                        </Grid>
                        
                        <!--Grid.Row = 3 : Applications GridView-->
                        <GridView x:ConnectionId='9'
                            SelectionMode="None"
                            ItemsSource="{Binding Applications}"
                            Margin="-10,0,-10,0"
                            x:Name="Applications_GridView"
                            Grid.Row="3">
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <Button x:ConnectionId='10'
                                                                        
                                        x:Name="Application_Button"
                                        CornerRadius="5"
                                        BorderThickness="1.5"
                                        BorderBrush="{Binding BorderBrush, Converter={StaticResource StringToColor}}"
                                        Background="{Binding Background, Converter={StaticResource StringToColor}}"
                                        Height="41"
                                        Width="505">
                                        <Grid
                                            Margin="0,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="14"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="300"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!--Grid.Column = 0 : Star - IsFavorite-->
                                            <Image x:ConnectionId='11'
                                                                                     
                                                x:Name="IsFavorite_Star_Image"
                                                Grid.Column="0"
                                                Source="{Binding IsFavorite_IconSource}"/>
                                            
                                            <!--Grid.Column = 1 : Company Name & Job Info-->
                                            <StackPanel
                                                Margin="5,0,0,0"
                                                Width="165"
                                                HorizontalAlignment="Left"
                                                Orientation="Vertical"
                                                Grid.Column="1">
                                                <TextBlock
                                                    FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                                    FontSize="12"
                                                    Foreground="#F5F5F5"
                                                    Text="{Binding Detail.CompanyName}"/>
                                                <TextBlock
                                                    FontFamily="/Assets/Fonts/Assistant-Regular.ttf#Assistant"
                                                    FontSize="12"
                                                    Foreground="#F5F5F5"
                                                    Text="{Binding Detail.PositionName}"/>
                                            </StackPanel>
                                            
                                            <!--Grid.Column = 2 : Task Line-->
                                            <Frame
                                                Margin="10,5,5,12"
                                                Grid.Column="2"
                                                Width="10000"
                                                Height="1"
                                                HorizontalAlignment="Stretch"
                                                Background="#80FFFFFF"/>

                                            <!--Grid.Column = 2 : Tasks-->
                                            <Grid
                                                Margin="0,3,0,0"
                                                Width="300"
                                                Grid.Column="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!--Grid.Column = 0 : Apply Task-->
                                                <StackPanel
                                                    Width="30"
                                                    HorizontalAlignment="Left"
                                                    Orientation="Vertical"
                                                    Grid.Column="0">
                                                    <Frame x:ConnectionId='17'
                                                        Margin="6,0,0,0"
                                                        HorizontalAlignment="Left"
                                                        x:Name="HasApplied_Status_Frame"
                                                                                               
                                                        Height="15"
                                                        Width="15"
                                                        CornerRadius="7.5"
                                                        Background="{Binding Detail.HasApplied_Background}"/>
                                                    <TextBlock
                                                        FontSize="10"
                                                        FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                                        Foreground="#CCF5F5F5"
                                                        Text="{Binding Detail.HasApplied_Date}"/>
                                                </StackPanel>
                                                
                                                <!--Grid.Column = 1 : MidTasks-->
                                                <StackPanel
                                                    Margin="-5,0,0,0"
                                                    HorizontalAlignment="Center"
                                                    Orientation="Horizontal"
                                                    Grid.Column="1">
                                                    <GridView
                                                        Visibility="Visible"
                                                        HorizontalAlignment="Center"
                                                        ScrollViewer.VerticalScrollMode="Disabled"
                                                        SelectionMode="None"
                                                        Margin="0,-8,5,0"
                                                        ItemsSource="{Binding Tasks}">
                                                        <GridView.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel  
                                                                    Width="30"
                                                                    HorizontalAlignment="Left"
                                                                    Orientation="Vertical"
                                                                    Grid.Column="0">
                                                                    <Frame x:ConnectionId='16'
                                                                        Margin="6,0,0,0"
                                                                        HorizontalAlignment="Left"
                                                                        x:Name="Application_MidTask_Status_Frame"
                                                                                                                        
                                                                        Height="15"
                                                                        Width="15"
                                                                        CornerRadius="7.5"
                                                                        Background="{Binding Status_Background}"/>
                                                                    <TextBlock
                                                                        FontSize="10"
                                                                        FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                                                        Foreground="#CCF5F5F5"
                                                                        Text="{Binding Task_Date}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </GridView.ItemTemplate>
                                                        <GridView.ItemContainerStyle>
                                                            <Style TargetType="GridViewItem">
                                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                                <Setter Property="Margin" Value="0,0,-2,0"/>
                                                            </Style>
                                                        </GridView.ItemContainerStyle>
                                                        <GridView.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <StackPanel
                                                                HorizontalAlignment="Center"
                                                                Orientation="Horizontal">
                                                                </StackPanel>
                                                            </ItemsPanelTemplate>
                                                        </GridView.ItemsPanel>
                                                    </GridView>
                                                    <Button x:ConnectionId='14'
                                                                                                    
                                                        BorderThickness="0"
                                                        Background="Transparent"
                                                        Padding="0"
                                                        x:Name="Application_MidTask_Add_Button"
                                                        Margin="0,-11,0,0"
                                                        Height="15"
                                                        Width="15">
                                                        <Image
                                                            Source="/Assets/Components/General/Add.svg"/>
                                                    </Button>
                                                </StackPanel>
                                                
                                                <!--Grid.Column = 2 : Result Task-->
                                                <StackPanel
                                                    Visibility="{Binding Detail.ResultVisibility}"
                                                    Margin="0,0,-10,0"
                                                    Width="30"
                                                    HorizontalAlignment="Right"
                                                    Orientation="Vertical"
                                                    Grid.Column="2">
                                                    <Frame x:ConnectionId='13'
                                                        Margin="6,0,0,0"
                                                        HorizontalAlignment="Left"
                                                        x:Name="Result_Status_Frame"
                                                                                           
                                                        Height="15"
                                                        Width="15"
                                                        CornerRadius="7.5"
                                                        Background="{Binding Detail.HasResult_Background}"/>
                                                    <TextBlock
                                                        FontSize="10"
                                                        FontFamily="/Assets/Fonts/Assistant-SemiBold.ttf#Assistant"
                                                        Foreground="#CCF5F5F5"
                                                        Text="{Binding Detail.HasResult_Date}"/>
                                                </StackPanel>

                                                <!--Grid.Column = 2 : Result Add Image Button--> 
                                                <Image x:ConnectionId='12'
                                                                                                
                                                    x:Name="Application_Result_Add_Image"
                                                    Visibility="{Binding Detail.AddResultVisibility}"
                                                    Grid.Column="2"
                                                    Source="/Assets/Components/General/Add.svg"
                                                    Margin="0,-11,0,0"
                                                    Height="15"
                                                    Width="15"/>

                                            </Grid>
                                        </Grid>
                                        <Button.Resources>
                                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#C2DBFF"/>
